.topics
	.line
		padding 5px 10px
		&:not(last-chlid)
			margin-bottom 8px
		box-sizing border-box
		.header
			display flex
			margin-bottom 3px
			width 100%
			height 20px
			line-height 20px
			.tab
				flex 0 0 32px
				margin-right 5px
				border-radius 5px
				text-align center
				font-size 12px
				color #999
				background #e5e5e5
				&.good
					color #fff
					background #80bd01
			.title
				flex 1
				font-size 16px
				white-space nowrap
				text-overflow ellipsis
				overflow hidden
		.detail
			position relative
			.avatar
				display inline-block
				margin-right 5px
				vertical-align top
				img
					border-radius 50%
			.info
				display inline-block
				vertical-align top
				color #666
				.author
					margin-bottom 4px
				.time
					font-size 0.8em
			.reply
				position absolute
				right 5px
				top 8px
				p
					color #666
					text-align right
					font-size 12px
					.reply_count
						color #80bd01