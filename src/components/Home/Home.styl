.home
	position absolute
	top 70px
	left 0
	bottom 0
	width 100%
	overflow hidden
	z-index 1000
	.list
		width 100%
		.line
			height 50px
			padding 5px 10px
			box-sizing border-box
			.header
				display flex
				width 100%
				height 20px
				line-height 20px
				.tab
					flex 0 0 32px
					margin-right 5px
					text-align center
					font-size 12px
					color #999
					background #e5e5e5
					&.good
						color #fff
						background #80bd01
				.title
					flex 1
					font-size 16px
					white-space nowrap
					text-overflow ellipsis
					overflow hidden