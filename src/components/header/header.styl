.header
	position fixed
	top 0
	left 0
	width 100%
	height 70px
	.title
		position relative
		text-align center
		background-color rgb(68, 68, 68)
		margin-bottom 5px
		.menu
			position absolute
	.nav
		width 100%
		.nav-wrapper
			display flex
			justify-content space-around
			a
				display inline-block
				width 34px
				height 18px
				line-height 18px
				text-align center
				font-size 14px
				color #80bd01
				&.active
					color #fff
					background #80bd01
					border-radius 4px